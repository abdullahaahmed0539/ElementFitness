@page
@model SettingsAdminViewModel
@{
    ViewData["Title"] = "Admin Portal - Settings";
    Layout = "_AdminLayout";
}


<div class="row ms-1">
    <div class="mt-3 col-6 col-md-9 col-lg-10">
        <h1 class="bebas-light">Settings</h1>
    </div>    
</div>

<div class="d-none">
   <input id="error-message" value="@ViewData["ErrorMessage"]"/>
</div>


<div class="row ms-1">
    <div class="col-12">
        <h3 class="bebas-light mt-3">Change Password</h3>
    </div>
</div>


<form method="post" asp-page-handler="onPost" enctype="multipart/form-data">
    <div class="modal-body">
        <div class="form-group row">
            <div class="col-12 col-md-6">
                <label asp-for="CurrentPassword" for="CurrentPasswordInput" class="bebas-light mt-1">Current Password</label>
                <input asp-for="CurrentPassword" type="password" class="form-control" id="CurrentPasswordInput">
                <br>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-12 col-md-6">
                <label asp-for="NewPassword" for="NewPasswordInput" class="bebas-light mt-1">New Password</label>
                <input asp-for="NewPassword" type="password" class="form-control" id="NewPasswordInput">
                <br>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-12 col-md-6">
                <label asp-for="ConfirmPassword" for="ConfirmPasswordInput" class="bebas-light mt-3">Confirm Password</label>
                <input asp-for="ConfirmPassword" type="password" class="form-control" id="ConfirmPasswordInput">
                <span id="field-match-msg" style="color: #e51440; font-size: 12px">*The passwords do not match</span>
                <br>
            </div>
        </div>
    </div>
    <div class="modal-footer row d-flex justify-content-start">
        <div>
            <button type="submit" id="change-btn" class="btn btn-primary" hidden>Change Password</button>   
            <button type="submit" id="disabled-change-btn" class="btn btn-primary" disabled>Change Password</button>      
        </div>    
    </div>
</form>


@section Scripts
{
    <script src="~/js/settings.js" asp-append-version="true"></script> 
}