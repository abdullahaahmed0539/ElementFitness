<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="shortcut icon" href="~/favicon.ico" type="image/x-icon"/>
    <title>Element Fitness - @ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons"
      rel="stylesheet">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@24,400,0,0" />
    <link href="https://cdn.datatables.net/1.12.1/css/jquery.dataTables.min.css" rel="stylesheet"/>
    <link rel="stylesheet" href="~/css/fonts.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ElementFitness.App.styles.css" asp-append-version="true" />
 
</head>
<body class="dark-theme">
    <div class="main-container d-flex">
        <div class="sidebar" id="side-nav" >
            <div class="header-box">
                <div class="fs-4">
                        <img src="~/img/Logo.png" width="50" height="50" alt="Logo image">
                        <span class="navbar-brand text-white d-inline-block align-center bebas-light">
                            Admin Portal
                        </span>  
                        <span id="secondary-sidebar-toggle-button" class="material-icons" >
                            menu
                        </span>                             
                </div>
            </div>
            <ul class="list-unstyled px-2 mt-4">
                <li id="PromoVideo"><a href="/Admin/PromoVideo" class="text-decoration-none bebas-light d-block">Promo Video</a></li>
                <li id="Facilities"><a href="/Admin/Facilities" class="text-decoration-none bebas-light d-block">Facilities</a></li>
                <li id="Programs"><a href="/Admin/Programs" class="text-decoration-none bebas-light d-block">Programs</a></li>
                <li id="Offers"><a href="/Admin/Offers" class="text-decoration-none bebas-light d-block">Offers</a></li>
                <li id="Trainers"><a href="/Admin/Trainers" class="text-decoration-none bebas-light d-block">Trainers</a></li>
                <li id="Partners"><a href="/Admin/Partners" class="text-decoration-none bebas-light d-block">Partners</a></li>
                <li id="Enquiries"><a href="/Admin/Enquiries" class="text-decoration-none bebas-light d-block">Enquiries</a></li>
                <li id="JobListings"><a href="/Admin/JobListings" class="text-decoration-none bebas-light d-block">Job Listings</a></li>
                <li id="JobApplications"><a href="/Admin/JobApplications" class="text-decoration-none bebas-light d-block">Job Applications</a></li>
                <li id="Members"><a href="/Admin/Members&Leads" class="text-decoration-none bebas-light d-block">Members & Leads</a></li>
                <li id="Testimonials"><a href="/Admin/Testimonials" class="text-decoration-none bebas-light d-block">Testimonials</a></li>
                <li><a id="logout-link" onclick="logout()" class="text-decoration-none bebas-light d-block">Logout</a></li>

            </ul>

        </div>
        <div class="container-fluid content">
            <div class="row">
                <span id="sidebar-toggle-button" class="material-icons mt-2 col-12" >
                    menu
                </span>
                <main role="main" class="pb-3 col-12 admin-body">
                    <div class="container">
                        @RenderBody()
                    </div>
                </main>
            </div>
            
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/adminLayout.js" asp-append-version="true"></script>
    
 
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>